{
    "name": "aporat/store-receipt-validator",
    "description": "PHP receipt validator for Apple iTunes, Google Play and Amazon App Store",
    "type": "library",
    "license": ["Apache-2.0"],
    "homepage": "https://github.com/aporat/store-receipt-validator",
    "keywords": [
        "itunes",
        "apple",
        "google play",
        "amazon appstore",
        "in-app purchase",
        "receipt validation",
        "iap",
        "php"
    ],
    "authors": [
        {
            "name": "Adar Porat",
            "email": "aporat28@gmail.com",
            "homepage": "https://github.com/aporat"
        },
        {
            "name": "Stanimir Kukudov",
            "email": "stanimir.kukudov@gmail.com",
            "homepage": "https://github.com/stanimir-kukudov"
        }
    ],
    "require": {
        "php": "^8.3",
        "ext-json": "*",
        "ext-openssl": "*",

        "psr/http-client": "^1.0",
        "psr/http-message": "^2.0",
        "psr/http-factory": "^1.0",
        "psr/log": "^3.0",

        "guzzlehttp/guzzle": "^7.9|^8.0",
        "guzzlehttp/psr7": "^2.6",

        "lcobucci/clock": "^3.3",
        "lcobucci/jwt": "^5.5",
        "nesbot/carbon": "^2.72.6|^3.0",
        "phpseclib/phpseclib": "^3.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^1.11 || ^2.0",
        "phpunit/phpunit": "^12.0",
        "squizlabs/php_codesniffer": "^3.10",
        "phpstan/phpstan-phpunit": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "ReceiptValidator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ReceiptValidator\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-ci": "vendor/bin/phpunit --coverage-text --coverage-clover coverage.xml --log-junit junit.xml",
        "check": "vendor/bin/phpcs",
        "format": "vendor/bin/phpcbf",
        "analyze": "vendor/bin/phpstan analyse src --level=8 --memory-limit=-1"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "support": {
        "issues": "https://github.com/aporat/store-receipt-validator/issues"
    },
    "suggest": {
        "codecov/codecov-php": "Helps send coverage reports to codecov.io"
    }
}
